{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "version": "4.5.2",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup-enhanced.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-enhanced.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "farming_phrases.txt",
    "farming_phrases_en.txt",
    "farming_phrases_ur.txt",
    "farming_phrases_es.txt"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_specific_settings": {
    "gecko": {
      "id": "autochat@sushiomsky.github.io",
      "strict_min_version": "109.0"
    }
  }
}
