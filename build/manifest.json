{
  "manifest_version": 3,
  "name": "AutoChat - Auto Message Sender",
  "version": "4.0",
  "description": "Enhanced automated message sender with typing simulation, anti-detection, analytics, and smart scheduling features.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup-enhanced.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-enhanced.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["farming_phrases.txt"],
      "matches": ["<all_urls>"]
    }
  ]
}
