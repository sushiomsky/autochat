{
  "name": "autochat-enhanced",
  "version": "5.0.0",
  "description": "Advanced automated message sender with typing simulation, anti-detection, and smart scheduling",
  "main": "background.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "npm run lint -- --max-warnings=0",
    "lint-staged": "lint-staged",
    "format": "prettier --write \"**/*.{js,json,md,html,css}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,html,css}\"",
    "build": "node scripts/build.js",
    "build:prod": "NODE_ENV=production node scripts/build.js",
    "build:firefox": "node scripts/build-firefox.js",
    "build:firefox:prod": "NODE_ENV=production node scripts/build-firefox.js",
    "watch": "node scripts/build.js --watch",
    "package": "npm run build:prod && node scripts/package.js",
    "serve:build": "http-server ./build -p 8080 -c-1",
    "test:selenium": "jest tests/integration/selenium --runInBand",
    "test:puppeteer": "jest tests/integration/puppeteer --runInBand",
    "test:ci": "npm test -- --runInBand --coverage",
    "package:firefox": "npm run build:firefox:prod && node scripts/package-firefox.js",
    "clean": "rm -rf dist dist-firefox build coverage",
    "verify": "npm run lint:ci && npm run format:check && npm run test:ci && npm run build:prod",
    "audit": "npm audit --omit=dev",
    "audit:ci": "npm audit --omit=dev --audit-level=moderate",
    "prepare": "husky install"
  },
  "keywords": [
    "chrome-extension",
    "automation",
    "chat",
    "messaging",
    "auto-sender"
  ],
  "author": "AutoChat Team",
  "license": "MIT",
  "engines": {
    "node": ">=22.11.0 <24.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sushiomsky/autochat"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webextension-mock": "^3.9.0",
    "selenium-webdriver": "^4.10.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "puppeteer-core": "^22.0.0",
    "prettier": "^3.0.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "ws": "^8.18.0"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!node_modules/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "dependencies": {
    "chart.js": "^4.5.1"
  },
  "optionalDependencies": {
    "chromedriver": "^143.0.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  }
}
