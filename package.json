{
  "name": "autochat-enhanced",
  "version": "4.4.0",
  "description": "Advanced automated message sender with typing simulation, anti-detection, and smart scheduling",
  "main": "background.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md,html,css}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,html,css}\"",
    "build": "node scripts/build.js",
    "build:prod": "NODE_ENV=production node scripts/build.js",
    "watch": "node scripts/build.js --watch",
    "package": "npm run build:prod && node scripts/package.js",
    "clean": "rm -rf dist build coverage"
  },
  "keywords": [
    "chrome-extension",
    "automation",
    "chat",
    "messaging",
    "auto-sender"
  ],
  "author": "AutoChat Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sushiomsky/autochat"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "jest": "^29.7.0",
    "jest-webextension-mock": "^3.9.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!node_modules/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
